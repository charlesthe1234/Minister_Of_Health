@page "/calendarevents/delete"
@using Microsoft.EntityFrameworkCore
@using Minister_Of_Time.Domain
@inject IDbContextFactory<Minister_Of_Time.Data.Minister_Of_TimeContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>CalendarEvent</h2>
    <hr />
    @if (calendarevent is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">EventName</dt>
            <dd class="col-sm-10">@calendarevent.EventName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Location</dt>
            <dd class="col-sm-10">@calendarevent.Location</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">StartDateTime</dt>
            <dd class="col-sm-10">@calendarevent.StartDateTime</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">EndDateTime</dt>
            <dd class="col-sm-10">@calendarevent.EndDateTime</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CalendarType</dt>
            <dd class="col-sm-10">@calendarevent.CalendarType</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@calendarevent.Status</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">HostUserId</dt>
            <dd class="col-sm-10">@calendarevent.HostUserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ActivityId</dt>
            <dd class="col-sm-10">@calendarevent.ActivityId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@calendarevent.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@calendarevent.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@calendarevent.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@calendarevent.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="calendarevent" OnValidSubmit="DeleteCalendarEvent" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(calendarevent is null)">Delete</button> |
            <a href="/calendarevents">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private CalendarEvent? calendarevent;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        calendarevent = await context.CalendarEvent.FirstOrDefaultAsync(m => m.Id == Id);

        if (calendarevent is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteCalendarEvent()
    {
        using var context = DbFactory.CreateDbContext();
        context.CalendarEvent.Remove(calendarevent!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/calendarevents");
    }
}
