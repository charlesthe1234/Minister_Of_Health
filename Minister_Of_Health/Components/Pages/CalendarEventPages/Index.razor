@page "/calendarevents"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Minister_Of_Time.Domain
@using Minister_Of_Time.Data
@implements IAsyncDisposable
@inject IDbContextFactory<Minister_Of_Time.Data.Minister_Of_TimeContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="calendarevents/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.CalendarEvent">
    <PropertyColumn Property="calendarevent => calendarevent.EventName" />
    <PropertyColumn Property="calendarevent => calendarevent.Location" />
    <PropertyColumn Property="calendarevent => calendarevent.StartDateTime" />
    <PropertyColumn Property="calendarevent => calendarevent.EndDateTime" />
    <PropertyColumn Property="calendarevent => calendarevent.CalendarType" />
    <PropertyColumn Property="calendarevent => calendarevent.Status" />
    <PropertyColumn Property="calendarevent => calendarevent.HostUserId" />
    <PropertyColumn Property="calendarevent => calendarevent.ActivityId" />
    <PropertyColumn Property="calendarevent => calendarevent.DateCreated" />
    <PropertyColumn Property="calendarevent => calendarevent.DateUpdated" />
    <PropertyColumn Property="calendarevent => calendarevent.CreatedBy" />
    <PropertyColumn Property="calendarevent => calendarevent.UpdatedBy" />

    <TemplateColumn Context="calendarevent">
        <a href="@($"calendarevents/edit?id={calendarevent.Id}")">Edit</a> |
        <a href="@($"calendarevents/details?id={calendarevent.Id}")">Details</a> |
        <a href="@($"calendarevents/delete?id={calendarevent.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private Minister_Of_TimeContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
