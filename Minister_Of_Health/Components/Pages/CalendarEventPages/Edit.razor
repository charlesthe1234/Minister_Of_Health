@page "/calendarevents/edit"
@using Microsoft.EntityFrameworkCore
@using Minister_Of_Time.Domain
@inject IDbContextFactory<Minister_Of_Time.Data.Minister_Of_TimeContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>CalendarEvent</h2>
<hr />
@if (CalendarEvent is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="CalendarEvent" OnValidSubmit="UpdateCalendarEvent" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="CalendarEvent.Id" value="@CalendarEvent.Id" />
                <div class="mb-3">
                    <label for="eventname" class="form-label">EventName:</label>
                    <InputText id="eventname" @bind-Value="CalendarEvent.EventName" class="form-control" />
                    <ValidationMessage For="() => CalendarEvent.EventName" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <InputText id="location" @bind-Value="CalendarEvent.Location" class="form-control" />
                    <ValidationMessage For="() => CalendarEvent.Location" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="startdatetime" class="form-label">StartDateTime:</label>
                    <InputDate id="startdatetime" @bind-Value="CalendarEvent.StartDateTime" class="form-control" />
                    <ValidationMessage For="() => CalendarEvent.StartDateTime" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="enddatetime" class="form-label">EndDateTime:</label>
                    <InputDate id="enddatetime" @bind-Value="CalendarEvent.EndDateTime" class="form-control" />
                    <ValidationMessage For="() => CalendarEvent.EndDateTime" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="calendartype" class="form-label">CalendarType:</label>
                    <InputText id="calendartype" @bind-Value="CalendarEvent.CalendarType" class="form-control" />
                    <ValidationMessage For="() => CalendarEvent.CalendarType" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="status" class="form-label">Status:</label>
                    <InputText id="status" @bind-Value="CalendarEvent.Status" class="form-control" />
                    <ValidationMessage For="() => CalendarEvent.Status" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="hostuserid" class="form-label">HostUserId:</label>
                    <InputNumber id="hostuserid" @bind-Value="CalendarEvent.HostUserId" class="form-control" />
                    <ValidationMessage For="() => CalendarEvent.HostUserId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="activityid" class="form-label">ActivityId:</label>
                    <InputNumber id="activityid" @bind-Value="CalendarEvent.ActivityId" class="form-control" />
                    <ValidationMessage For="() => CalendarEvent.ActivityId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="datecreated" class="form-label">DateCreated:</label>
                    <InputDate id="datecreated" @bind-Value="CalendarEvent.DateCreated" class="form-control" />
                    <ValidationMessage For="() => CalendarEvent.DateCreated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="dateupdated" class="form-label">DateUpdated:</label>
                    <InputDate id="dateupdated" @bind-Value="CalendarEvent.DateUpdated" class="form-control" />
                    <ValidationMessage For="() => CalendarEvent.DateUpdated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="createdby" class="form-label">CreatedBy:</label>
                    <InputText id="createdby" @bind-Value="CalendarEvent.CreatedBy" class="form-control" />
                    <ValidationMessage For="() => CalendarEvent.CreatedBy" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="updatedby" class="form-label">UpdatedBy:</label>
                    <InputText id="updatedby" @bind-Value="CalendarEvent.UpdatedBy" class="form-control" />
                    <ValidationMessage For="() => CalendarEvent.UpdatedBy" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/calendarevents">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private CalendarEvent? CalendarEvent { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        CalendarEvent ??= await context.CalendarEvent.FirstOrDefaultAsync(m => m.Id == Id);

        if (CalendarEvent is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateCalendarEvent()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(CalendarEvent!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!CalendarEventExists(CalendarEvent!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/calendarevents");
    }

    private bool CalendarEventExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.CalendarEvent.Any(e => e.Id == id);
    }
}
