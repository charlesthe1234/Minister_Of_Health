@page "/useractivities/create"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using Minister_Of_Time.Domain
@using Microsoft.AspNetCore.Components.Authorization
@inject IDbContextFactory<Minister_Of_Time.Data.Minister_Of_TimeContext> DbFactory
@inject NavigationManager NavigationManager

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2>Define New Activity</h2>

        @* --- MARKUP SECTION START --- *@
        <EditForm Model="UserActivity"
                  OnValidSubmit="AddUserActivity">
            @* Call the AddUserActivity when the form is filled and saved *@
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label class="form-label fw-bold">Activity Name</label>
                <InputText @bind-Value="UserActivity.Name" class="form-control" placeholder="e.g., Strategic Planning" />
                <ValidationMessage For="() => UserActivity.Name" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Activity Type</label>
                <InputSelect @bind-Value="UserActivity.ActivityTypeId" class="form-select">
                    <option value= "" >-- Select an activity type --</option>
                    <option value= "1" >Work</option>
                    <option value= "2" >Meeting</option>
                    <option value= "3" >Hobby</option>
                    <option value= "4" >Exercise</option>
                    <option value= "5" >Family Time</option>
                    <option value= "6" >General Events</option>
                </InputSelect>
                <ValidationMessage For="() => UserActivity.ActivityType" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Category</label>
                <InputSelect @bind-Value="UserActivity.Category" class="form-select">
                    @*======================================== *@
                    <option value="">-- Select a Category --</option>
                    <option value="Work">Work</option>
                    <option value="Life">Life</option>
                    <option value="Others">Others</option>
                </InputSelect>
                <ValidationMessage For="() => UserActivity.Category" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Description (Optional)</label>
                <InputTextArea @bind-Value="UserActivity.Description" class="form-control" rows="3" />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save Activity</button>
                <button type="button" class="btn btn-secondary" @onclick='() => NavigationManager.NavigateTo("/calendarevents/create")'>Cancel</button>
            </div>
        </EditForm>
        @* --- MARKUP SECTION END --- *@

    </div>
</div>

@code {
    [CascadingParameter]
    private Task<AuthenticationState>? authStateTask { get; set; }

    private UserActivity UserActivity { get; set; } = new();
    private string? currentDbUserId;

    protected override async Task OnInitializedAsync()
    {
        if (authStateTask != null)
        {
            var authState = await authStateTask;
            var user = authState.User;

            if (user.Identity is not null && user.Identity.IsAuthenticated)
            {
                using var context = DbFactory.CreateDbContext();
                string loginEmail = user.Identity.Name ?? "";

                var dbUser = await context.Set<User>()
                    .FirstOrDefaultAsync(u => u.Email.ToLower().Trim() == loginEmail.ToLower().Trim());

                if (dbUser != null)
                {
                    currentDbUserId = dbUser.Id;
                }
            }
        }
    }

    private async Task AddUserActivity()
    {
        if (currentDbUserId == null) return;

        using var context = DbFactory.CreateDbContext();

        // Map the current user to the activity
        UserActivity.UserId = currentDbUserId;

        context.UserActivity.Add(UserActivity);
        await context.SaveChangesAsync();

        // Redirect back to the calendar create page
        NavigationManager.NavigateTo("/calendarevents/create");
    }
}