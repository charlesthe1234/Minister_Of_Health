@page "/calendarevents/inbox"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using Minister_Of_Time.Domain
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IDbContextFactory<Minister_Of_Time.Data.Minister_Of_TimeContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider
@rendermode InteractiveServer
@attribute [Authorize]

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3><i class="bi bi-mailbox me-2"></i>My Invitations</h3>
        <span class="badge bg-primary">@pendingInvites.Count Pending</span>
    </div>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    @if (pendingInvites.Count == 0 && string.IsNullOrEmpty(successMessage))
    {
        <div class="card p-5 text-center bg-light border-dashed">
            <i class="bi bi-calendar-x display-4 text-muted"></i>
            <p class="mt-3 text-muted">No pending invitations for your email.</p>
        </div>
    }

    <div class="row">
        @foreach (var invite in pendingInvites)
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100 shadow-sm border-start border-4 border-info">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title fw-bold text-primary">@invite.CalendarEvent?.EventName</h5>
                            <span class="badge bg-light text-dark border">@invite.EventRole?.RoleName</span>
                        </div>

                        <div class="mb-2">
                            <div class="small text-muted mb-1">
                                <i class="bi bi-calendar-event me-2"></i>
                                @invite.CalendarEvent?.StartDateTime.ToString("f")
                            </div>
                            <div class="small text-muted mb-1">
                                <i class="bi bi-geo-alt me-2"></i>
                                @invite.CalendarEvent?.Location
                            </div>
                        </div>

                        <p class="card-text text-secondary small border-top pt-2">
                            @(string.IsNullOrEmpty(invite.CalendarEvent?.Description) ? "No description provided." : invite.CalendarEvent.Description)
                        </p>

                        <div class="d-flex justify-content-end gap-2 mt-3 pt-2 border-top">
                            <button class="btn btn-outline-danger btn-sm px-3" @onclick='() => Respond(invite, "Declined")'>
                                Decline
                            </button>
                            <button class="btn btn-success btn-sm px-4" @onclick='() => Respond(invite, "Accepted")'>
                                Accept
                            </button>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 py-2">
                        <small class="text-muted italic">Invited by: @invite.CalendarEvent?.CreatedBy</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private List<EventParticipant> pendingInvites = new();
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadInvites();
    }

    private async Task LoadInvites()
    {
        using var context = DbFactory.CreateDbContext();
        var user = (await AuthStateProvider.GetAuthenticationStateAsync()).User;
        var email = user.FindFirst(ClaimTypes.Email)?.Value;

        if (!string.IsNullOrEmpty(email))
        {
            pendingInvites = await context.EventParticipant
                .Include(p => p.CalendarEvent)
                .Include(p => p.EventRole)
                .Where(p => p.InviteeEmail == email && p.ParticipationStatus == "Pending")
                .ToListAsync();
        }
    }

    private async Task Respond(EventParticipant p, string status)
    {
        successMessage = null;
        using var context = DbFactory.CreateDbContext();
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var currentUserId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        if (!string.IsNullOrEmpty(currentUserId))
        {
            var dbParticipant = await context.EventParticipant.FirstOrDefaultAsync(x => x.Id == p.Id);

            if (dbParticipant != null)
            {
                dbParticipant.ParticipationStatus = status;
                dbParticipant.UserId = currentUserId;

                if (status == "Accepted")
                {
                    dbParticipant.CustomActivity = p.CustomActivity;
                    dbParticipant.CustomCategory = p.CustomCategory;
                }

                await context.SaveChangesAsync();
                pendingInvites.Remove(p);
                successMessage = $"Successfully {status.ToLower()} the invitation for '{p.CalendarEvent?.EventName}'.";
                StateHasChanged();
            }
        }
    }
}