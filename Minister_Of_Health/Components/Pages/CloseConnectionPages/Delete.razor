@page "/closeconnections/delete"
@using Microsoft.EntityFrameworkCore
@using Minister_Of_Time.Domain
@inject IDbContextFactory<Minister_Of_Time.Data.Minister_Of_TimeContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>CloseConnection</h2>
    <hr />
    @if (closeconnection is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@closeconnection.UserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ConnectedUserId</dt>
            <dd class="col-sm-10">@closeconnection.ConnectedUserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ConnectionType</dt>
            <dd class="col-sm-10">@closeconnection.ConnectionType</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ViewLifeCalendar</dt>
            <dd class="col-sm-10">@closeconnection.ViewLifeCalendar</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ViewWorkCalendar</dt>
            <dd class="col-sm-10">@closeconnection.ViewWorkCalendar</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@closeconnection.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@closeconnection.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@closeconnection.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@closeconnection.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="closeconnection" OnValidSubmit="DeleteCloseConnection" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(closeconnection is null)">Delete</button> |
            <a href="/closeconnections">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private CloseConnection? closeconnection;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        closeconnection = await context.CloseConnection.FirstOrDefaultAsync(m => m.Id == Id);

        if (closeconnection is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteCloseConnection()
    {
        using var context = DbFactory.CreateDbContext();
        context.CloseConnection.Remove(closeconnection!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/closeconnections");
    }
}
