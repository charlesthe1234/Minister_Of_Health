@implements IDisposable
@inject NavigationManager NavigationManager

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="horizontal-nav">

        <div class="brand-container">
            <img src="images/SmallLogo.png" alt="Minister of Time Logo" class="brand-logo" />
            <p class="logo-name"> MINISTER OF TIME</p>
        </div>

        <AuthorizeView>
            <NotAuthorized>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            </div>
            </NotAuthorized>
            <Authorized>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Change Account
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="home">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="life">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Life
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="work">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Work
                </NavLink>
            </div>
            </Authorized>
        </AuthorizeView>

        <div class="sign-out">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Sign Out
                </NavLink>
        </div>
    </nav>
</div>

@code {
    private string? currentUrl;
    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

}